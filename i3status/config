general {
	output_format = "dzen2"
  	colors = true
 	interval = 5
	output_format = "i3bar"
 	colors = true
	color_good = "#0288D1"
  	color_degraded = "#FFCDD2"
  	color_bad = "#E91E63"
}

order += "disk /home"
order += "run_watch DHCP"
order += "wireless wlp3s0"
order += "ethernet eth0"
order += "volume master"
order += "brightness"
order += "battery all"
order += "tztime date"
order += "tztime local"

wireless wlp3s0 {
        format_up = "%essid: %ip, %quality, %bitrate"
        format_down = ""
}

ethernet eth0 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "%status%percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
	hide_seconds = true
	last_full_capacity = true
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 20
}

tztime date {
       format = "%m/%d"
}

tztime local {
        format = "%I:%M:%S"
}

disk "/home" {
        format = "%free"
}

volume master {
        format = "â™ª%volume"
        format_muted = "â™ª~%volume"
        device = "pulse:1"
}